# functions
function course 
    if test (count $argv) != 1
        echo "Usage: course [course-code]"
    else
        cd "/mnt/d/College/$argv[1]-Comp"
    end
end

function compile 
    if [ (count $argv) = 1 ]
        g++ -Wall -g $argv[1];
    else if [ (count $argv) = 2 ]
        g++ -Wall -g $argv[1] -o $argv[2];
    else
        echo "Usage: compile [file.cpp] [output]";
    end
end

function ga
    if [ (count $argv) = 0 ]
        git add .
    else
        git add $argv
    end
end

function gc
    if [ (count $argv) = 1 ]
        git commit -m "$argv[1]";
    else
        echo "Usage: gc \"commit message\"";
    end 
end
